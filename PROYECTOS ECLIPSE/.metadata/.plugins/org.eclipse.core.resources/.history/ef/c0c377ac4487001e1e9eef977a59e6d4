import java.util.*;
public class Practica12 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner leer = new Scanner(System.in);
		
		System.out.println("Dime tu sueldo del mes ");
		
		double sueldomes = leer.nextDouble();
		
		double sueldosemana = sueldomes/4;
		
		double ahorrosemana = sueldosemana*0.15;
		
		double ahorromes = ahorrosemana*4;
		
		System.out.println("Tu ahorro del mes es" + ahorromes + " EUROS " );
		
		double ahorroanual = ahorromes * 12;
		
		System.out.println("Tu ahorro anual es de : " + ahorroanual + " EUROS ");
		
	}

}
