import java.util.*;
public class Practica11 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner leer = new Scanner(System.in);
		
		System.out.println("Dime el precio total del art√≠culo ");
		
		double precio1 = leer.nextDouble();
		
		double descuento = precio1 * 0.2;
		
		double iva = descuento * 0.15;
		
		System.out.println("El precio del articulo con un 20% de descuento es : " + descuento + "Y si le aplicamos el 15% de IVA se queda en : " + iva);
		
	}

