import java.util.*;

public class Practica15 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner leer = new Scanner(System.in);
		
		System.out.println("Dime tu año de nacimiento: ");
		
		int añonacimiento = leer.nextInt();
		
		System.out.println("Dime el año actual :");
		
		int añoactual = leer.nextInt();
		
		int añosvividos = añoactual-añonacimiento;
		
		int diasvividos = añosvividos*365;
		
		System.out.println("Los dias que esa persona lleva vivo son : " + diasvividos + " días.");
	}

}
