import java.util.*;
public class Practica2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner leer = new Scanner(System.in);
		
		System.out.println("Introduce las horas trabajadas, por favor.");
		
		double horastra = leer.nextDouble();
		
		System.out.println("Introduce el pago por hora.");
		
		double pagohora = leer.nextDouble();
		
		double pagosinhextra = horastra*pagohora;
		
		if (horastra<=40) {
			
			System.out.println("Tu sueldo es de: " + pagosinhextra + " â‚¬ ");
			
		}else {
		
				double pagohextra = pagosinhextra - 40;
				
				double pagototal = pagosinhextra + (pagohextra * pagohora * 2);
				
				System.out.println("El pago total es de :" + pagototal);
			}
		}
		
	}

